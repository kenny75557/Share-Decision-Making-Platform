@model IEnumerable<SDMProject.Models.Login>

@{
    ViewBag.Title = "Index";
}
<br>

<html>
<head>
    <link href="~/Content/PagedList.css" />

    <style>
        table {
            border-collapse: collapse;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        th, td {
            padding: 8px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>

<body>
    <span style="position:absolute;right:20%;font-size:25px" font-size:20px>@Html.ActionLink("病歷清單", "Show_List")</span>

    <h2>醫師帳戶清單</h2>
    <br>
    <table class="table" align="center">
        <tr>
            <th style="min-width:120px">醫師姓名</th>
            <th style="min-width:200px">帳號</th>
            <th style="min-width:200px">密碼</th>
            <th style="min-width:100px"></th>
            <th style="min-width:100px"></th>
            <th style="min-width:100px"></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.DrName)</td>
        <td>@Html.DisplayFor(modelItem => item.Account)</td>
        <td>@Html.DisplayFor(modelItem => item.Password)</td>
        <td>
            @Html.ActionLink("詳細資料", "Details", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("編輯帳號", "Edit", new { id = item.ID })
        </td>
        <td>
            @Html.ActionLink("刪除帳號", "Delete", new { id = item.ID })
        </td>
    </tr>
        }
    </table>
</body>
</html>