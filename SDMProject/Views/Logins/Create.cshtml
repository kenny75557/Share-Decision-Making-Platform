@model SDMProject.Models.Login

@{
    ViewBag.Title = "Create";
}
<html>
<head>
</head>

<body>
    <h2>註冊帳號</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID)

        <span>帳號：</span>
        @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Account, "", new { @style = "color:red" })
        <br>
        <span>密碼：</span>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @style = "color:red" })
        <br>
        <span>驗證碼：</span>
        @Html.EditorFor(model => model.Keypass, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Keypass, "", new { @style = "color:red" })
        <br>
        <span>醫師姓名：</span>
        @Html.EditorFor(model => model.DrName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DrName, "", new { @style = "color:red" })
        <br>
        <br>
        <input type="submit" value="建立帳號" class="btn btn-outline-primary" />

        <span style="color:red">@ViewBag.KeypassMsg</span>
        <br>
        <span style="color:red">@ViewBag.ErrorIDMsg</span>
        <br>
        <span style="color:red">@ViewBag.ErrorAccountMsg</span>
        <br>
        <span style="color:red">@ViewBag.ErrorPasswordMsg</span>
        <br>
        @*<span style="color:red">@ViewBag.Error_All</span><br>*@
    }

    @Html.ActionLink("返回清單", "Index")
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}