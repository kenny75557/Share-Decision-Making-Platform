@model SDMProject.Models.Login

@{
    ViewBag.Title = "ResetPassword";
}

<h2>重設您的密碼</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <span>輸入您的帳號：</span>
    <br>
    <input type="text" name="ResetAccout" />
    <br>
    <span>設定新的密碼：</span>
    <br>
    <input type="text" name="NewPassword" />
    <br>
    <span>輸入ResetKey：</span>
    <br>
    <input type="text" name="ResetKey" />
    <br>
    <br>
    <input type="submit" value="儲存" class="btn btn-outline-primary" />
    <br>
    <br>
    <span style="color:red">@ViewBag.ResetAccountNull</span>
    <span style="color:red">@ViewBag.ResetMsg</span>
    <br>
    <br>
}

@Html.ActionLink("返回清單", "Index")